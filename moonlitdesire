<button id="chatBtn">Chat</button>
<div id="chatBox">
  <h3>Chat</h3>
  <div id="messages"></div>
  <input id="msgInput" placeholder="Type..." />
  <button onclick="sendMsg()">Send</button>
</div>

<script>
// Define elements properly
const chatBtn = document.getElementById('chatBtn');
const chatBox = document.getElementById('chatBox');
const messages = document.getElementById('messages');
const msgInput = document.getElementById('msgInput');

// Chat button toggle
chatBtn.onclick = () => {
  chatBox.style.display = chatBox.style.display === 'block' ? 'none' : 'block';
};

function sendMsg() {
  const userMessage = msgInput.value.trim();
  if (!userMessage) return;

  // Add user message to the chat display
  messages.innerHTML += `<div><strong>You:</strong> ${userMessage}</div>`;
  
  // Clear input
  msgInput.value = '';

  // Scroll to bottom of messages
  messages.scrollTop = messages.scrollHeight;

  // ===== TELEGRAM BOT LOGIC (Async) =====
  // REMINDER: Replace these with your actual bot token and chat ID
  const BOT_TOKEN = "YOUR_TELEGRAM_BOT_TOKEN_HERE";
  const CHAT_ID = "YOUR_TELEGRAM_CHAT_ID_HERE";
  const text = encodeURIComponent("New message from website: " + userMessage);

  fetch(`https://api.telegram.org/bot${BOT_TOKEN}/sendMessage?chat_id=${CHAT_ID}&text=${text}`)
    .then(r => r.json())
    .then(() => {
        // Buddy response on successful send
        messages.innerHTML += `<div><strong>Buddy:</strong> We've received your message! We'll get back to you soon.</div>`;
    })
    .catch(() => {
        // Buddy response on error
        messages.innerHTML += `<div><strong>Buddy:</strong> Unable to contact admin right now, but I’m here with you.</div>`;
    })
    .finally(() => {
        // Scroll again after response
        messages.scrollTop = messages.scrollHeight;
    });
}

// Allow sending message by pressing ENTER key
msgInput.addEventListener('keypress', function (e) {
  if (e.key === 'Enter') {
    sendMsg();
  }
});
</script>


